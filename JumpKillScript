local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Function to kill the player if they jump
local function onJump()
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    if humanoid then
        humanoid.Health = 0
    end
end

-- Connect the jump detection
local function setupJumpDetection(char)
    character = char
    local humanoid = char:WaitForChild("Humanoid")
    humanoid.Jumping:Connect(onJump)
end

if character then
    setupJumpDetection(character)
end
player.CharacterAdded:Connect(setupJumpDetection)

-- Just a quick example of a jump kill script.
